<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="ViewModel"
            type="com.example.mycalculator.MainViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="16dp"
            android:text="@{ViewModel.displayText}"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="16dp"
            android:background="@color/black"
            android:columnCount="4">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="3"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;AC&quot;)}"
                android:text="C"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="3"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;÷&quot;)}"
                android:text="/"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="3"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;×&quot;)}"
                android:text="*"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="3"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;−&quot;)}"
                android:text="-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;7&quot;)}"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;8&quot;)}"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;9&quot;)}"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;+&quot;)}"
                android:text="+"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;4&quot;)}"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;5&quot;)}"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;6&quot;)}"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;=&quot;)}"
                android:text="="
                android:textSize="24sp" />


            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;1&quot;)}"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;2&quot;)}"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;3&quot;)}"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnSin"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;sin&quot;)}"
                android:text="sin"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnCos"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;cos&quot;)}"
                android:text="cos"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnTan"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;tan&quot;)}"
                android:text="tan"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnLeftParenthesis"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;(&quot;)}"
                android:text="("
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnRightParenthesis"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;)&quot;)}"
                android:text=")"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;%&quot;)}"
                android:text="%"
                android:textSize="24sp" />
            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;.&quot;)}"
                android:text="."
                android:textSize="24sp" />
            <Button
                android:id="@+id/btnHistory"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_columnWeight="1"
                android:onClick="@{() -> ViewModel.onButtonClick(&quot;⟳&quot;)}"
                android:text="⟳"
                android:textSize="24sp" />




        </GridLayout>
    </LinearLayout>
</layout>
